<header class="navbar navbar-fixed-top navbar-inverse">
    <nav>
      <div class="container1">
        <div class="head-new col-md-12">
          <div class="col-md-8">
            <div class="header-right">
              <%= link_to image_tag("/assets/logo.png", size: "150x50"), root_path, id: "logo" %>
            </div>
          </div>
          <div class="col-md-3">
            <div id="address">
              <span class="glyphicon glyphicon-map-marker"></span>
              <%= link_to "Địa chỉ cửa hàng", address_path %>
            </div>
          <div id="cart-header">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= link_to "Giỏ hàng", "/cart" %>
          </div>
        </div>
      </div><br>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", home_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li>
            <%= link_to "Categories", categories_path %>
          </li>
          <li>
            <%= link_to "Products", products_path %>
          </li>
          <% if can? :manage, :all %>
            <li><%= render "layouts/manager" %></li>
          <% end %>
        <% end %>
        <% if current_user.present? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= "My Accout" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.users.profile"), current_user %></li>
              <li><%= link_to t("views.users.edit_profile"),
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.button.logout"),
                  destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li>
            <%= render 'layouts/order_text' %>
          </li>
        <% else %>
          <li>
            <%= link_to t("views.button.login"), new_user_session_path  %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
