<% provide :title, "All products" %>
<h1><%= "All products" %></h1>
<div class="col-md-12">
  <div>
    <%= search_form_for @search, class: "form-inline" do |f| %>
      <%= f.text_field :name_cont, class: "form-control",
        placeholder: "Product name" %>
      <%= f.text_field :price_cont, class: "form-control",
        placeholder: "Price" %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div><br>
  <table class="table table-hover">
    <thead>
      <tr class="info">
        <th><%= "Index" %></th>
        <th><%= "Picture" %></th>
        <th><%= "Name" %></th>
        <th><%= "Price" %></th>
        <th><%= "Quantity" %></th>
        <th><%= "Action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render "product" %>
    </tbody>
  </table>
</div>
<%= paginate @products %>
<%= page_entries_info @products %>
