<% provide :title, "new product" %>
<h1><%= "New product" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @product] do |f| %>
      <%= render "shared/error_message" , object: @product %>
      <%= f.hidden_field :category_id, value: params[:id] %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
      <div>
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: "form-control" %>
      </div>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <span class="picture">
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
          class: "form-control" %>
      </span>
      <% if @product.image.present? %>
        <%= image_tag(@product.image, size: Settings.products.product_size) %>
      <% end %>
      <div class="actions">
      <br>
        <%= f.submit "Create", class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
