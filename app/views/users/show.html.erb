<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.present? %>
        <%= image_tag(@user.avatar, size: Settings.users.ava_profile_size) %>
      <% else %>
        <%= image_tag(Settings.users.avatar,
          size: Settings.users.ava_profile_size) %>
      <% end %>
      <h3><%= @user.name %></h3>
      <h3><%= @user.email %></h3>
    </section>
  </aside>
</div>
